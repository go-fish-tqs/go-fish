# Development Environment Variables
# Copy this file to .env for local development

# Database
POSTGRES_DB=gofish_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# Application
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# https://stripe.com/pt-pt get your keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here


# JWT Configuration (CRITICAL: Keep this secret!)
# Generate a new secure key with: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET_KEY=your_generated_jwt_secret_here_min_256_bits

BUILD_DATE=dev
VERSION=dev-latest


# Grafana Monitoring (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GF_SERVER_ROOT_URL=http://localhost:3030
